<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_500">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/toolbar_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_round_search_24"/>

        <EditText
            android:id="@+id/toolbar_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:layout_alignStart="@id/toolbar_left_icon"
            android:layout_alignEnd="@id/toolbar_menu_icon"
            android:layout_marginEnd="32dp"
            android:hint="@string/toolbar_hint_search"
            android:textColorHint="@color/cardview_shadow_start_color"/>

        <ImageView
            android:id="@+id/toolbar_menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_menu_open_24" />
    </RelativeLayout>


</RelativeLayout>