<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_note"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        card_view:strokeColor="@android:color/darker_gray"
        card_view:strokeWidth="1dp"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        card_view:cardCornerRadius="15dp"
        card_view:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/previewNoteTitle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/search_view_background"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/noteTitle"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/previewNoteText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:maxLines="2"
                android:gravity="start"
                android:text="@string/previewNoteText" />


            <TextView
                android:id="@+id/dateNoteText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="11sp"
                android:text="Note creation date" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>